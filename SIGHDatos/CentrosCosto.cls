    sSql = ""
    sOrder = ""
    If oTabla.codigo <> "" Then
        sSql = sSql + " and Codigo like '%" & oTabla.codigo & "%'"
    End If
    If oTabla.Descripcion <> "" Then
        sSql = sSql + " and Descripcion like '%" & oTabla.Descripcion & "%'"
