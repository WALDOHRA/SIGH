Function Insertar(ByVal oTabla As DOTipoEstadoCivil) As Boolean
On Error GoTo ManejadorDeError
Dim oCommand As New ADODB.Command
Dim oParameter As ADODB.Parameter
 
   Insertar = False
   With oCommand
       .CommandType = adCmdStoredProc
       Set .ActiveConnection = mo_Conexion
       .CommandText = "TiposEstadoCivilAgregar"
           Set oParameter = .CreateParameter("@Descripcion", adVarChar, adParamInput, 50, oTabla.Descripcion): .Parameters.Append oParameter
